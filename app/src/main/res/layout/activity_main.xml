<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkGrey"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Calculator - Mai Tuan Hung"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:background="@color/black"
            android:padding="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grayToi"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:text="0"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            android:id="@+id/workingsTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:paddingRight="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text=""
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="45sp"
            android:id="@+id/resultTextView"/>

    </LinearLayout>

    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:textColor="@color/black"
                android:onClick="clearOnClick"
                android:text="CE"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:onClick="bracketsOnClick"
                android:textColor="@color/orange"
                android:text="C"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:textColor="@color/orange"
                android:onClick="powerOfOnClick"
                android:text="BS"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:textColor="@color/orange"
                android:onClick="divisionOnClick"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:onClick="sevenOnClick"
                android:text="7"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:onClick="eightOnClick"
                android:text="8"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:onClick="nineOnClick"
                android:text="9"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:textColor="@color/orange"
                android:onClick="timesOnClick"
                android:text="X"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:onClick="fourOnClick"
                android:text="4"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:onClick="fiveOnClick"
                android:text="5"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:onClick="sixOnClick"
                android:text="6"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:textColor="@color/orange"
                android:onClick="minusOnClick"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:onClick="oneOnClick"
                android:text="1"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:text="2"
                android:onClick="twoOnClick"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:text="3"
                android:onClick="threeOnClick"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:textColor="@color/orange"
                android:text="+"
                android:onClick="plusOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/grayToi"
                android:textColor="@color/black"
                android:text="+/-"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/calcButtonTextSize"
                android:background="@color/graySang"
                android:textColor="@color/black"
                android:text="0"
                android:onClick="zeroOnClick"/>


            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="40sp"
                android:background="@color/grayToi"
                android:textColor="@color/black"
                android:text="."
                android:onClick="decimalOnClick"/>

            <Button
                android:layout_margin="@dimen/margin_but"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="40sp"
                android:background="@color/grayToi"
                android:textColor="@color/black"
                android:text="="
                android:onClick="equalsOnClick"/>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>